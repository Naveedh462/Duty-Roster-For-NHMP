<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="AdminOfficer.AddUserActivity"
    android:background="@color/colorBlue"
    android:padding="16dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ProfilePic"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:alpha="700"
            android:background="@drawable/admin_profile_image_radius"
            android:src="@drawable/ico_upload_profile"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorYellow"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        app:boxStrokeColor="@color/colorYellow"
        app:boxStrokeWidthFocused="2dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorYellow"
        app:hintTextColor="@color/colorYellow"
        app:startIconDrawable="@drawable/ico_user"
        app:startIconTint="@color/colorYellow"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_first_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/colorYellow" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        app:boxStrokeColor="@color/colorYellow"
        app:boxStrokeWidthFocused="2dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorYellow"
        app:hintTextColor="@color/colorYellow"
        app:startIconDrawable="@drawable/ico_user"
        app:startIconTint="@color/colorYellow">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_last_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/colorYellow" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        app:boxStrokeColor="@color/colorYellow"
        app:boxStrokeWidthFocused="2dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorYellow"
        app:hintTextColor="@color/colorYellow"
        app:startIconDrawable="@drawable/ico_email"
        app:startIconTint="@color/colorYellow">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_email_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/colorYellow" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        app:boxStrokeColor="@color/colorYellow"
        app:boxStrokeWidthFocused="2dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/colorYellow"
        app:hintTextColor="@color/colorYellow"
        app:startIconDrawable="@drawable/ico_lock"
        app:startIconTint="@color/colorYellow">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:textColor="@color/colorYellow" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_buttons"
        android:layout_marginTop="10dp"
        android:text="add"
        android:textColor="@color/colorBlack"
        android:transitionName="transition_login" />


</LinearLayout>